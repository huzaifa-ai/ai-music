<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/facial_analysis_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facial Expression Analysis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¸ Position your face in the camera and capture a photo for analysis"
        android:textSize="16sp"
        android:textColor="#E8F5E9"
        android:gravity="center"
        android:padding="16dp"
        android:alpha="0.9" />

    <!-- Camera/Image Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Camera Preview -->
            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Captured Image View -->
            <ImageView
                android:id="@+id/capturedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <!-- Face Detection Overlay -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/face_detection_overlay"
                android:alpha="0.7" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Analysis Results -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Emotion Result -->
        <TextView
            android:id="@+id/emotionEmojiView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š"
            android:textSize="48sp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/confidenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: 87%"
            android:textSize="16sp"
            android:textColor="#B8E6B8"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Play Music Button -->
        <Button
            android:id="@+id/playMusicButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="ðŸŽµ Play Music"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/music_button_background"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- Capture Button -->
        <Button
            android:id="@+id/captureButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ“¸ Capture Photo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/capture_button_background"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <!-- Retake Button -->
        <Button
            android:id="@+id/retakeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ”„ Retake"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/retake_button_background"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Analyze Button -->
        <Button
            android:id="@+id/analyzeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ§  Analyze Expression"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/analyze_button_background"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Tips -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ Tip: Make sure your face is well-lit and clearly visible for better analysis"
        android:textSize="12sp"
        android:textColor="#B8E6B8"
        android:gravity="center"
        android:padding="8dp"
        android:alpha="0.8" />

</LinearLayout> 